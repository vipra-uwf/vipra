{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "target": "es6",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
            "src/**/*.ts",
            "src/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "certs"
    ]
}