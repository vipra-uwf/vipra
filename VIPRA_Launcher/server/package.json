{
  "name": "vipralauncher",
  "version": "1.0.0",
  "description": "This is the backend for the VIPRA Launcher",
  "main": "vipralauncher.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.build.json",
    "prestart": "npm run build",
    "start": "node ./dist/vipralauncher.js flagsfile=./dist/flags.txt",
    "lint": "eslint . --ext .ts --fix",
    "docs": "npx typedoc --options ./typedoc.json",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/ip": "^1.1.0",
    "@types/jest": "^28.1.7",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.7.6",
    "@types/prompt-sync": "^4.1.1",
    "@types/streamifier": "^0.1.0",
    "@types/tar": "^6.1.2",
    "@types/tar-stream": "^2.2.2",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.8",
    "typedoc": "^0.23.10",
    "typedoc-plugin-merge-modules": "^4.0.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "express": "^4.18.1",
    "ip": "^1.1.8",
    "multer": "^1.4.5-lts.1",
    "prompt-sync": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "streamifier": "^0.1.1",
    "tar": "^6.1.11",
    "tar-stream": "^2.2.0",
    "tsyringe": "^4.7.0",
    "typechain": "file:../../ChainBuilder/typechain-1.0.0.tgz",
    "winston": "^3.8.0",
    "zlib": "^1.0.5"
  },
  "jest": {
    "roots": [
      "."
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/values/",
      "/__tests__/mocks/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "./src/configuration/*",
      "./__tests__/mocks",
      "./__tests__/values",
      "./src/types"
    ],
    "clearMocks": true,
    "coverageDirectory": "coverage"
  }
}
